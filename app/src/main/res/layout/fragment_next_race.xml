<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="purelywebdesign.f1feedreader.NextRace">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/track_image"
        android:src="@drawable/malaysia_track"
        android:scaleType="fitEnd" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_round"/>

    <TextView
        android:id="@+id/next_race_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/next_race_round"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_circuit_name"
        android:layout_below="@id/next_race_title"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_locality"
        android:layout_below="@id/next_race_circuit_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_country"
        android:layout_below="@id/next_race_locality"/>







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_date"
        android:layout_below="@id/next_race_country"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_time"
        android:layout_below="@id/next_race_date"/>




    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/next_race_time"
        android:layout_above="@id/track_image"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_map_button"
        android:layout_alignLeft="@id/strut"
        android:layout_alignParentRight="true"
        android:layout_below="@id/next_race_time"
        android:text="Map"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_calendar_button"
        android:layout_alignRight="@id/strut"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/next_race_time"
        android:text="Calendar"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_race_track_title"
        android:layout_below="@id/next_race_calendar_button"
        android:text="Track layout"/>

</RelativeLayout>
