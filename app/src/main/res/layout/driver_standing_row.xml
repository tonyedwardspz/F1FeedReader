<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver_position"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver_name"
        android:layout_toEndOf="@+id/driver_position"
        android:layout_toRightOf="@+id/driver_position"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driver_points"
        android:layout_toEndOf="@+id/driver_name"
        android:layout_toRightOf="@+id/driver_name"/>

</RelativeLayout>
