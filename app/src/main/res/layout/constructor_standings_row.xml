<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:theme="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constructor_position"/>


    <TextView
        android:theme="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constructor_name"
        android:layout_toEndOf="@+id/constructor_position"
        android:layout_toRightOf="@+id/constructor_position"/>

    <TextView
        android:theme="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constructor_points"
        android:layout_toEndOf="@+id/constructor_name"
        android:layout_toRightOf="@+id/constructor_name"/>

</RelativeLayout>